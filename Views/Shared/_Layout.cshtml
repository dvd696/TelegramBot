<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css/bootstrap-reboot.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    @RenderSection("Style",false)
    <title>@ViewBag.Title</title>
</head>
<body dir="rtl">
    <div class="navbar navbar-expand-md navbar-dark bg-dark">
        <h2 class="navbar-brand"><a class="navbar-brand" asp-action="Main">Admin Panel</a></h2>
        <button class="navbar-toggler collapsed" data-toggle="collapse" data-target="#nav" aria-expanded="false">
            <span class="navbar-toggler-icon"></span>
        </button>
        <section id="nav" class="navbar-collapse collapse" style="">
            <nav class="navbar-nav">
                <a asp-action="SendMessage" class="nav-item nav-link">ارسال پیام</a>
                <a asp-action="ChangePassword" class="nav-item nav-link">تغییر رمز عبور</a>
                <a asp-action="Logout" class="nav-item nav-link">خروج</a>
            </nav>
        </section>
    </div>
    <div>
        @RenderBody()
    </div>
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>
