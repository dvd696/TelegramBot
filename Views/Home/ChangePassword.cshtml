@model BotAdminPanel.Models.ChangePasswordViewModel
<div class="container-fluid mt-4 d-flex justify-content-center" dir="rtl">
    <div class="col col-md-8">
        <form asp-action="ChangePassword" method="post">
            <div class="form-group">
                <h6 class="text-right mb-2">پسورد فعلی</h6>
                <input asp-for="OldPassword" type="text" class="form-control">
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <h6 class="text-right">پسورد جدید</h6>
                <input asp-for="NewPassword" type="text" class="form-control">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group text-right mt-4">
                <h6 class="text-right">تکرار پسورد جدید</h6>
                <input asp-for="RePassword" type="text"class="form-control">
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mb-5">تغییر پسورد</button>
        </form>
    </div>
</div>

